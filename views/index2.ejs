    <!-- content -->
    <div>
      <div class="container">
        <div class="notice_wrapper">
          <h5><b>공지사항</b></h5>
          <ul class="list">
            <li class="first">
              <a href="#">
                <strong class="subject">Test1</strong>
                <span class="date">2015.03.03</span>
                <p class="desc">테스트 중입니다.</p>
