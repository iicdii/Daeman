    <!-- //header -->
    <!-- slide and login -->
    <div class="container_wrapper">
      <div class="container">
        <!-- login -->
        <div class="login_area">
          <form class="form-signin">
            <div class="input-group">
              <label for="inputName" class="sr-only">아이디</label>
              <input type="text" id="myId" class="form-control" placeholder="아이디" required autofocus>
            </div>
            <div class="input-group">
              <label for="inputPassword" class="sr-only">비밀번호</label>
              <input type="password" id="myPassword" class="form-control" placeholder="비밀번호" required>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" class="remember" value="remember-me"><span class="saveId">아이디 저장</span>
              </label>
              <div class="btn_area">
                <a href="#" class="find">ID/PW찾기</a>
                <span class="bar">|</span>
                <a href="/signup" class="register">회원가입</a>
              </div>
            </div>
            <button class="btn btn-lg btn-block" onclick="signin();" type="button">로그인</button>
          </form>
          <div class="logged">
            <span class="username"></span>님
            <button class="btn btn-lg btn-block" onclick="signout();" type="button">로그아웃</button>
          </div>
        </div>
        <!-- //login -->
        <!-- slide -->
        <div class="slides_area">
          <div class="slider carousel">
            <div><span class="text-center"><h1>Content 1</h1></span></div>
            <div><span class="text-center"><h1>Content 2</h1></span></div>
            <div><span class="text-center"><h1>Content 3</h1></span></div>
